{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "dist/",
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
} 