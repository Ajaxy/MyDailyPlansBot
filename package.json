{
  "name": "mydailyplans",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/worker/index.js",
    "bs": "npm run build && npm run start",
    "lint": "eslint --ext .ts src/",
    "dev": "nodemon --exec ts-node --transpile-only src/worker/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prestart": "npm run build",
    "clean": "rm -rf dist",
    "db:create": "ts-node --transpile-only scripts/db-create.ts",
    "db:seed": "ts-node --transpile-only scripts/db-seed.ts"
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "allowJs": true,
      "module": "CommonJS"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "MyDailyPlans - Team Daily Plans Sync Bot",
  "dependencies": {
    "dotenv": "^16.5.0",
    "grammy": "^1.36.3",
    "node-cron": "^4.1.0",
    "typeorm": "^0.3.20",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
